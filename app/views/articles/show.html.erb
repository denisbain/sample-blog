<h1><%= @article.title %></h1>
<p>
  <%= @article.text %>
</p>
<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :author%><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit 'Create comments'%>
  </p>

<% end %>
</p>
<p>
  <% @article.comments.each do |comment| %>
  <p>
    <%= "Author: #{comment.author}" %><br />
    <%= "Body: #{comment.body}" %>
  </p>
  <hr />
<% end %>
</p>
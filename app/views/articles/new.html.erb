<h1><%= t("articles.new_article") %></h1>

<%= form_for :article, url: articles_path, method: :post, data: {turbo: false} do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit 'Save article'%>
  </p>

<% end %>